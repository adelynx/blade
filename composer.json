{
    "name": "adelynx/blade",
    "description": "The standalone version of Laravel's Blade templating engine for use outside of Laravel 5.7.*",
    "keywords": ["laravel", "blade", "template", "view", "render"],
    "license" : "MIT",
    "authors": [
        {
            "name": "Adel KEDJOUR",
            "homepage": "https://adelkedjour.com"
        }
    ],
    "require": {
        "illuminate/view": "^5.7",
        "symfony/http-kernel": "^4.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7",
        "mockery/mockery": "^1.0",
        "php-coveralls/php-coveralls": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "Adelynx\\Blade\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
