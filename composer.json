{
    "name": "adelynx/blade",
    "description": "The standalone version of Laravel's Blade templating engine for use outside of Laravel 8.*",
    "keywords": ["laravel", "blade", "template", "view", "render"],
    "license" : "MIT",
    "authors": [
        {
            "name": "Adel Kedjour",
            "homepage": "https://adelkedjour.com"
        }
    ],
    "require": {
        "php": "^7.3|^8.0",
        "illuminate/view": "^8.12"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3.3"
    },
    "autoload": {
        "psr-4": {
            "Adelynx\\Blade\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
